      <!-- Have to look up how to create the searchbar -->
      <%= form_tag root_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a car"
      %>

<br>
<div class="abuttonsfour">
  <%= submit_tag "Search", class: "btn btn-warning btn-lg" %>
      <% end %>
  <%= link_to 'Go to your bookings', bookings_path, class: "btn btn-secondary btn-lg" %>
</div>
  <div class="lcontainer">
    <div class="row d-flex justify-content-center">
      <% @cars.each do |car| %>
        <div class="card col-12 col-sm-6 col-md-4 col-lg-3" id="card">
          <div class="lcar-card">
            <% if car.photo.attached? %>
              <%= cl_image_tag car.photo.key, height: 1000, width: 1500, crop: :fit, class: "car-image" %>
            <% else %>
              <%= image_tag "logo.png", class: "car-image" %>
            <% end %>

            <div class="lcar-crad-info">
              <h4><%= link_to car.model, car_path(car)%> | <%= car.year %></h4>
              <h5><%= car.location %></h5>
              <div class="lprice">
                <p><%= car.price %></p>
              </div>
              <div class="lcardavatar">
              <h4 class="lcar-card-price"></h4>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: " avatar-bordered" %>
              <!-- <img src="../assets/images/logo.png" class="card-car-owner avatar-bordered"/> -->
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
