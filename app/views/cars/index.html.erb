            <div class="lcar-crad-info">
              <h4><%= link_to car.model, car_path(car)%>| <%= car.year %></h4>
              <h5><%= car.location %></h5>
              <p><%= car.description %></p>
              <div class="lcardavatar">
              <h4 class="lcar-card-price"><%= car.price %> </h4>
              <%= image_tag "logo.png", class: " avatar-bordered" %>
              <!-- <img src="../assets/images/logo.png" class="card-car-owner avatar-bordered"/> -->
            </div>
          </div>
          </div>
        </div>
      <% end %>
