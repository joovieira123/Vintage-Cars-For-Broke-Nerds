  <br>
  
      <!-- Have to look up how to create the searchbar -->
      <%= form_tag root_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a car"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

  


  <br>
  <button type="button" class="btn btn-success"><%= link_to "Go to your bookings", bookings_path %></button>
  <button type="button" class="btn btn-outline-success">+<%= link_to "Add a new car", new_car_path %></button>
  <div class="lcontainer">
    <div class="row d-flex justify-content-center">
      <% @cars.each do |car| %>
        <div class="card col-12 col-sm-6 col-md-4 col-lg-3" id="card">
          <div class="lcar-card">
            <%#= cl_image_tag("https://res.cloudinary.com/ddep1altx/image/upload/v1605800751/samples/cloudinary-group.jpg",
                width: 400, height: 300, crop: :fill) %>
