<div class="abanner d-flex justify-content-center">
  <% if @car.photo.attached? %>
    <%= cl_image_tag @car.photo.key, height: 500, width: 1500, crop: :fill %>
  <% else %>
    <%= image_tag "logo.png", class: "car-image" %>
  <% end %>
</div>

  <div class="acontainer">
    <h1><%= @car.model %></h1>
    <h3>Price per day: <%=@car.price %></h3>
  </div>

<div class="acontainertwo">
    <div class="row">
        <%= link_to "Hire #{@car.model}",  new_car_booking_path(@car), class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>

<div class="acontainerthree">
  <div class="row">
    <div class="col">
      <h2>Year of car: <%= @car.year %></h2>
      <h3>Location of car: <%=@car.location %></h3>
      <br>
      <h4>Description of car</h4>
      <br>
        <p><%= @car.description %></p>
      </br>
      <h4>Owner of car</h4>
      <%= image_tag "logo.png", class: "avatar-bordered-two" %>
      <p>Andy</p>
    </div>

    <div class="col">
      <div id="map"
         style="width: 100%; height: 460px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

    <div class="acontainerfour">
  <div class="row">
    <div class="col-4">
      <%= link_to 'Return to home page', root_path, class: "btn btn-secondary btn-lg btn-block" %>
    </div>
    <div class="col-4">
       <%= link_to 'Edit car', edit_car_path(@car), class: "btn btn-secondary btn-lg btn-block" %>
    </div>
    <div class="col-4">
      <%= link_to "Remove #{@car.model}",
            car_path(@car),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-secondary btn-lg btn-block" %>
    </div>
  </div>
</div>

