<h1>Edit details of car</h1>

<%= simple_form_for(@car) do |f| %>

  <div class="form-inputs">
    <%= f.input :model %>
    <%= f.input :location %>
    <%= f.input :price %>
    <%= f.input :year %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Return to car', car_path(@car) %>
<%= link_to 'Return to home page', root_path %>

